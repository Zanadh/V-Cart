<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <title>Document</title>
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: auto;
            position: relative;
            ;
            border: solid green;
            height: 100%;
            width: 100%;
            max-width: 700px;
        }

        .table-container {
            margin-top: 20px;
            margin: auto;
            width: 90%;
            height: 500px;
            /* border: solid black; */
            overflow: scroll;
        }

        header {
            position: relative;
            height: 75px;
            width: 100%;
            padding: 10px;
            border-bottom: solid;
            text-align: center;
        }

        footer {
            /* margin-bottom: 50px; */
            width: 100%;
            height: 90px;
            border: solid;
            bottom: 0;
            /* position:relative; */
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1 style="float: left;">V-Cart</h1>

            <a href="/homeGuest/logout">
                <button style="float: right;">Log Out</button>
            </a>
        </header>

        <div class="table-container">
            <table border="1" style="width: 100%;text-align: center;">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Product Name</th>
                        <th>Type</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(el => { %>
                    <tr>
                        <td><%= el.id %></td>
                        <td><%= el.name %></td>
                        <td><%= el.type %></td>
                        <td><%= el.stock %></td>
                        <td><%= el.price %></td>
                        <td>
                            <div>
                                <button onclick="location.href='/homeAdmin/edit/<%= el.id %>'">Edit</button>
                                <button type="button"
                                    onclick="location.href='/homeAdmin/delete/<%= el.id %>'">Delete</button>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div><br>
        <br>
        <center>
            <a href="/homeAdmin/add">
                <button style="position: relative;"> Add Product</button>
            </a>
            <a href="/homeAdmin/scanner">
                <button style="position: relative;"> Process Payment</button>
            </a>
        </center>
        <footer>
        </footer>
    </div>
</body>

</html>